config-file = global/config

# Keybinds
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = cmd+control+k=scroll_page_up
keybind = cmd+control+j=scroll_page_down

# Windows / Tabs
keybind = global:cmd+enter=new_window
keybind = cmd+t=new_tab
keybind = cmd+x=close_window
keybind = cmd+shift+x=close_all_windows
keybind = cmd+f=toggle_fullscreen

# Create Split
keybind = cmd+shift+l=new_split:right
keybind = cmd+shift+j=new_split:down
keybind = cmd+shift+k=new_split:up
keybind = cmd+shift+h=new_split:left

# Change Split
keybind = cmd+l=goto_split:right
keybind = cmd+j=goto_split:bottom
keybind = cmd+k=goto_split:top
keybind = cmd+h=goto_split:left

# Misc
keybind = cmd+shift+[=equalize_splits
keybind = cmd+o=toggle_split_zoom
keybind = cmd+q=close_surface
keybind = cmd+r=reload_config

# Quick Terminal
keybind = cmd+n=toggle_quick_terminal

# Don't want to remove the visible-menu when using laptop
macos-non-native-fullscreen = visible-menu
